<h1 class="title-page"><%= @cocktail.name %></h1>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.ingredient.name %> |=>| dose: <%= dose.description %> <p><%= link_to "Delete this dose", dose_path(dose), method: 'delete',data: { confirm: 'Really?' } %></p></li>
  <% end %>
</ul>

<p><%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail) %></p>

<p><%= link_to "Back to homepage", cocktails_path %></p>
